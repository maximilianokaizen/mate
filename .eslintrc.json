{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "globals": {
        "exports": true,
        "require": true,
        "Require": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
  